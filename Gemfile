
source 'http://rubygems.org'

group :test do
  # pick one http client
  gem 'rest-client', '>=1.6'
  gem 'em-http-request'

  # optional
  gem 'rack'

  # optional, pick one json backend
  gem 'yajl-ruby'
  gem 'json'
  gem 'json_pure'

  # falls back from openssl
  gem 'ruby-hmac'

  # for testing
  gem 'bones'
  gem 'rr'
  gem 'webmock'
  gem 'bacon'
  if RUBY_VERSION >= '1.9.2'
    gem 'psych'
  end
end
